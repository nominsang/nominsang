                      <th><%= t(".detail")%></th>
                      <th><%= t(".edit")%></th>
                      <th><%= t(".destroy")%></th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th><%= t(".title")%></th>
                      <th><%= t(".content")%></th>
                      <th><%= t(".created_at")%></th>
                      <th><%= t(".detail")%></th>
                      <th><%= t(".edit")%></th>
                      <th><%= t(".destroy")%></th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% @devlogs.each do |devlog| %>
                    <tr>
                      <td><%= devlog.title %></td>
                      <td><%= devlog.content %></td>
                      <td><%= devlog.created_at %></td>
                      <td><%= link_to 'Show', [:admin, devlog] %></td>
                      <td><%= link_to 'Edit', edit_admin_devlog_path(devlog) %></td>
                      <td><%= link_to 'Destroy', [:admin, devlog], method: :delete, data: { confirm: 'Are you sure?' } %></td>
